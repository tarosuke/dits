{
	"name": "dits",
	"displayName": "DITS",
	"description": "distoributed issue tracking system for VSCode",
	"version": "0.0.0",
	"publisher": "tarosuke",
	"repository": {
		"type": "git",
		"url": "https://github.com/tarosuke/dits.git"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "vscode/dits.js",
	"contributes": {
		"commands": [{
			"command": "dits.refresh",
			"title": "Refresh",
			"icon": "./resources/refresh.svg"
		},{
			"command": "dits.chdir",
			"title": "change current directory"
		},{
			"command": "dits.newChild",
			"title": "new subissue"
		},{
			"command": "dits.openChild",
			"title": "open subissue"
		},{
			"command": "dits.finish",
			"title": "finish this issue"
		},{
			"command": "dits.delete",
			"title": "delete this issue"
		},{
			"command": "dits.goParent",
			"title": "go super issue"
		}],
		"menus": {
			"view/title": [
				{
					"command": "dits.refresh",
					"when": "view == issue",
					"group": "navigation"
				},{
					"command": "dits.finish",
					"when": "view == issue",
					"group": "issue"
				},
				{
					"command": "dits.delete",
					"when": "view == issue",
					"group": "issue"
				},
				{
					"command": "dits.goParent",
					"when": "view == issue",
					"group": "issue"
				},
				{
					"command": "dits.newChild",
					"when": "view == children",
					"group": "children"
				}
			],
			"view/item/context": [
				{
					"command": "dits.openChild",
					"when": "view == children"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "dits",
					"title": "dits",
					"icon": "./resources/icon.svg"
				}
			]
		},
		"views": {
			"dits": [
				{
					"id": "workspaces",
					"name": "WORKSPACES"
				},
				{
					"id": "issue",
					"name": "ISSUE"
				},
				{
					"id": "log",
					"name": "LOG"
				},
				{
					"id": "children",
					"name": "SUBISSUE"
				},
				{
					"id": "closedChildren",
					"name": "CLOSED SUBISSUE",
					"visibility": "collapsed"
				}
			]
		}
	},
	"scripts": {},
	"devDependencies": {
		"@types/vscode": "^1.32.0"
	}
}
