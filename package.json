{
	"name": "dits",
	"displayName": "DITS",
	"description": "distoributed issue tracking system for VSCode",
	"version": "0.0.3",
	"publisher": "tarosuke",
	"license": "GPL3",
	"repository": {
		"type": "git",
		"url": "https://github.com/tarosuke/dits.git"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "vscode/dits.js",
	"contributes": {
		"commands": [{
			"command": "dits.refresh",
			"title": "Refresh",
			"icon": "$(refresh)"
		},{
			"command": "dits.chdir",
			"title": "Change current directory"
		},{
			"command": "dits.newChild",
			"title": "New subissue",
			"icon": "$(add)"
		},{
			"command": "dits.openChild",
			"title": "Open subissue"
		},{
			"command": "dits.release",
			"title": "Prepare release",
			"icon": "$(check-all)"
		},{
			"command": "dits.finish",
			"title": "Finish this issue",
			"icon": "$(check)"
		},{
			"command": "dits.delete",
			"title": "Delete this issue",
			"icon": "$(remove)"
		},{
			"command": "dits.deleteSub",
			"title": "Delete the issue"
		},{
			"command": "dits.goParent",
			"title": "Checkout super issue"
		},{
			"command": "dits.commit",
			"title": "Commit"
		},{
			"command": "dits.commitAll",
			"title": "Commit modified"
		},{
			"command": "dits.reopen",
			"title": "Reopen"
		},{
			"command": "dits.revert",
			"title": "Revert"
		}],
		"menus": {
			"view/title": [
				{
					"command": "dits.refresh",
					"when": "view == issue",
					"group": "navigation"
				},{
					"command": "dits.finish",
					"when": "view == issue",
					"group": "navigation"
				},
				{
					"command": "dits.delete",
					"when": "view == issue",
					"group": "navigation"
				},
				{
					"command": "dits.release",
					"when": "view == issue",
					"group": "navigation"
				},
				{
					"command": "dits.newChild",
					"when": "view == children",
					"group": "navigation"
				},
				{
					"command": "dits.commit",
					"when": "view == log"
				},
				{
					"command": "dits.commitAll",
					"when": "view == log"
				}
			],
			"view/item/context": [
			{
				"command": "dits.deleteSub",
				"when": "view == children",
				"group": "navigation"
			},{
				"command": "dits.reopen",
				"when": "view == closedChildren"
			},{
				"command": "dits.revert",
				"when": "view == closedChildren"
			}]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "dits",
					"title": "dits",
					"icon": "./resources/icon.svg"
				}
			]
		},
		"views": {
			"dits": [
				{
					"id": "workspaces",
					"name": "WORKSPACE"
				},
				{
					"id": "issue",
					"name": "ISSUE",
					"icon": "$(issue-opened)"
				},
				{
					"id": "log",
					"name": "LOG"
				},
				{
					"id": "children",
					"name": "SUBISSUE",
					"icon": "#(issues)"
				},
				{
					"id": "closedChildren",
					"name": "CLOSED SUBISSUE",
					"visibility": "collapsed",
					"icon": "$(issue-closed)"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "workspaces",
				"contents": "No Git workdirectory.\nOpen folder or workspace."
			}
		],
		"configuration": {
			"title": "dits",
			"properties": {
				"dits.backwordCompatible":{
					"type": "boolean",
					"default" : false,
					"description": "Recognize short hash and branchname without # and default Merge commit, parent command"
				}
			}
		}
	},
	"scripts": {},
	"devDependencies": {
		"@types/vscode": "^1.32.0"
	}
}
